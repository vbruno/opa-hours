{
  "name": "opahours-backend",
  "version": "1.0.0",
  "description": "Backend in TypeScript for time tracking and invoice billing.",
  "main": "server.ts",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "NODE_ENV=test vitest --run test/unit",
    "test:watch": "NODE_ENV=test vitest",
    "test:unit": "NODE_ENV=test vitest --run test/unit",
    "test:integration": "NODE_ENV=test vitest --run test/integration",
    "test:all": "NODE_ENV=test vitest --run",
    "test:cov": "vitest --coverage",
    "lint": "eslint .",
    "format": "prettier -w .",
    "db:check": "npm run build --silent && node dist/scripts/checkDb.js",
    "db:generate": "npm run build --silent && drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [],
  "author": "Bruno S. Velho",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
